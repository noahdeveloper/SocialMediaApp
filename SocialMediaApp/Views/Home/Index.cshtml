@if (@ViewBag.UserName != null)
{
    <input id="userName" name=@ViewBag.UserName value=@ViewBag.UserName type="hidden">
}


@section Scripts {

    <script>
        $(document).ready(function () {

        });

        function passUserNameToIndex() {
            var x = $("#userName").val();

            if (x == null)
            {
                var URL = window.location.protocol + "//" + window.location.host
                window.location.href = URL;
            }
            else
            {
                var URL = window.location.protocol + "//" + window.location.host + "/?UserName=" + x;
                window.location.href = URL;
            }
        }

        function passUserNameToSettings() {
            var x = $("#userName").val();

            var URL = window.location.protocol + "//" + window.location.host + "/Settings/UserProfile/?userName=" + x;
            window.location.href = URL;
        }
    </script>
}