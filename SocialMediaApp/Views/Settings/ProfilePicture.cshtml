
@{
    ViewBag.Title = "ProfilePicture";
}

<h2>ProfilePicture</h2>

@using (Html.BeginForm("ProfilePicture", "Settings", FormMethod.Post))
{
        <div class="form-group">
            <label>Choose profile picture</label>
            <input type="file" name="file" />
        </div>
        <div class="form-group">
            <input type="submit" value="Upload" style="margin-top:10px;" />
        </div>
}

@section Scripts {
    <script>
        $(function () {
            // When your form is submitted
            $("form").submit(function (e) {
                // Prevent the default behavior
                e.preventDefault();

                // Serialize your form
                var formData = new FormData($(this)[0]);
                var userName = "Me";

                // Make your POST
                $.ajax({
                    type: 'POST',
                    url: 'ProfilePicture/Settings',
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (view) {
                        alert("success");
                    },
                    complete: function () {
                        alert("complete");
                    }
                });
            });
        })
    </script>
}